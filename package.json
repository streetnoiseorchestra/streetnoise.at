{
  "name": "streetnoise-at",
  "version": "0.0.2",
  "description": "",
  "author": "Casey Link",
  "license": "GPLv3+",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^12.0.0",
    "@rollup/plugin-node-resolve": "^8.0.0",
    "bulma": "^0.8.2",
    "node-sass": "^4.14.1",
    "npm-run-all": "^4.1.3",
    "postcss-cli": "^7.1.1",
    "rollup": "^2.13.1",
    "rollup-plugin-terser": "^6.1.0"
  },
  "scripts": {
    "css-deploy": "npm run css-build && npm run css-postcss",
    "css-build": "npm run css-build-sno && npm run css-build-strafiato",
    "css-build-sno": "node-sass _css/streetnoise.scss streetnoise/static/css/streetnoise.css",
    "css-build-strafiato": "node-sass _css/strafiato.scss streetnoise/static/css/strafiato.css",
    "css-watch": "npm run css-build-sno -- --watch",
    "deploy": "npm run css-deploy && npm run js-build",
    "js-build": "rollup -c",
    "js-watch": "rollup -w -c",
    "build": "npm-run-all --parallel css-build js-build",
    "watch": "npm-run-all --parallel css-watch js-watch"
  },
  "dependencies": {
    "bulma-accordion": "^2.0.1",
    "bulma-extensions": "^6.2.7",
    "mediaelement": "^4.2.16"
  }
}
